<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17"
  xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.unima.risk6.gui.controllers.TitleScreenController">
  <children>
    <VBox alignment="CENTER" layoutX="140.0" layoutY="55.0" prefHeight="290.0" prefWidth="319.0"
      spacing="15.0"
      style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.14), 10, 0, 0, 0);">
      <Label alignment="CENTER" prefHeight="86.0" prefWidth="122.0"
        style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 40px; -fx-font-weight: bold; -fx-text-fill: #2D2D2D;"
        text="RISK">
        <font>
          <Font size="20.0"/>
        </font>
      </Label>
      <Button fx:id="startGameButton" onAction="#handleStartGame" mnemonicParsing="false"
        prefHeight="25.0" prefWidth="434.0" text="Start Game"/>
      <Button fx:id="quitGameButton" onAction="#handleQuitGame" mnemonicParsing="false"
        prefHeight="25.0" prefWidth="403.0" text="Quit"/>
      <padding>
        <Insets left="15.0" right="15.0"/>
      </padding>
    </VBox>
  </children>
</AnchorPane>
