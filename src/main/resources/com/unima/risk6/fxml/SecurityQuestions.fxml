<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="com.unima.risk6.gui.controllers.SecurityQuestionsController">
  <children>
    <HBox alignment="CENTER" VBox.vgrow="NEVER">
      <children>
        <AnchorPane prefHeight="600.0" prefWidth="800.0" HBox.hgrow="NEVER">
          <children>
            <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #FFFFFF; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.14), 10, 0, 0, 0);" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <Label contentDisplay="CENTER" style="-fx-font-family: 'Segoe UI', sans-serif; -fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2D2D2D;" text="Choose your security questions!">
                <font>
                  <Font name="BentonSans Bold" size="41.0" />
                </font>
              </Label>
              <ComboBox fx:id="FirstSecurityQuestionComboBox" prefHeight="40.0" prefWidth="870.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #ccc; -fx-border-radius: 20; -fx-border-width: 1; -fx-font-size: 18px;">
              </ComboBox>
              <TextField fx:id="firstAnswerField" prefHeight="40.0" prefWidth="870.0" promptText="Answer fist question" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                <font>
                  <Font size="18.0" />
                </font>
              </TextField>
                     <ComboBox fx:id="SecondSecurityQuestionComboBox" prefHeight="40.0" prefWidth="870.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #ccc; -fx-border-radius: 20; -fx-border-width: 1; -fx-font-size: 18px;" />
                     <TextField fx:id="secondAnswerField" prefHeight="40.0" prefWidth="870.0" promptText="Answer second question" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </TextField>
                     <ComboBox fx:id="ThirdSecurityQuestionComboBox" prefHeight="40.0" prefWidth="870.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-color: #ccc; -fx-border-radius: 20; -fx-border-width: 1; -fx-font-size: 18px;" />
                     <TextField fx:id="thirdAnswerField" prefHeight="40.0" prefWidth="870.0" promptText="Answer third question" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                        <font>
                           <Font size="18.0" />
                        </font>
                     </TextField>
              <Button fx:id="saveButton" alignment="CENTER" onAction="#handSaveButton" prefHeight="43.0" prefWidth="1006.0" style="-fx-background-color: linear-gradient(#FFDAB9, #FFA07A); -fx-text-fill: #FFFFFF;         -fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.14), 10, 0, 0, 0);" text="Save">
                <font>
                  <Font size="18.0" />
                </font>
              </Button>
              <padding>
                <Insets left="15.0" right="15.0" />
              </padding>
            </VBox>
          </children>
          <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
          </padding>
        </AnchorPane>
      </children>
    </HBox>
  </children>
</VBox>
